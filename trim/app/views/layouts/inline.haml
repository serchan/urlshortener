%html
  %head
    %title== Statistics for #{@inline_url}
    %style{ :type => "text/css" }
      :plain
        body {
          font: 12px verdana, arial, helvetica, sans-serif;
          text-align: center;
          background-color: #FFF;
        }
        table { width: 100%; margin: 0px; border-collapse: collapse; background-color: #FFF; }
        td { padding: 0px; text-align: center; }
        p { margin: 0px 0px 10px 0px; }

        h1 { margin: 0px 5px; line-height: 120%; font-weight: bold; font-size: 1.0em; color: #285A73; white-space: nowrap; }
        h2 { margin: 0px 5px; line-height: 110%; font-weight: bold; font-size: 0.8em; color: #285A73; }
        h5 { margin: 5px 0px; font-style: italic; font-weight: bold; font-size: 0.9em; color: #000; } /* Chart Titles */

        #container {
          margin: 0 auto;
          text-align: center;
          border: 1px solid #A5C1D1;
        }
        .seperator { clear: both; margin: 0px; padding: 0px; border: solid #A5C1D1; background-color: #FFF; border-width: 0px 0px 1px 0px; }
        .topline { margin: 0px 5px; padding: 2px; font-size: 0.8em; font-weight: bold; white-space: nowrap; }
        .destination { margin: 0px; padding: 2px; font-size: 0.6em; font-weight: bold; white-space: nowrap; }
        span.trimdot { color: #FF6600; }
        .chartbox { margin: 12px 0px; padding: 0px 10px; }

        table.stats { width: 95%; margin: 10px auto; border-collapse: collapse; background-color: #FFF; border: 1px solid #A5C1D1; }
        table.stats tr th { color: #285A73; padding: 5px; font-size: 0.8em; border-bottom: 1px solid #A5C1D1; text-align: center; }
        table.stats tr td { padding: 2px 5px 5px 5px; vertical-align: middle; font-size: 0.7em; text-align: left; white-space: nowrap; }
        .statsnorm td { background-color: #FFF; }
        .statsdark td { background-color: #F1F5F8; }
        .statshighlight td { background-color: #E3EBF0; }
        table.stats th.url, table.stats td.url { text-align: left; }
        table.stats td a.krw:link, a.krw:visited { text-decoration: none; color: #333; font-weight: normal; }
        table.stats td a.krw:hover, a.krw:active { text-decoration: underline; color: #FF6600; font-weight: normal; }
  %body
    =yield :layout
